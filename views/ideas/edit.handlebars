<div class="card card-body">
    <h3>Editer une idée de vidéo</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Titre</label>
            <input type="text" class="form-control" name="title" value="{{idea.title}}" required>
        </div>
        <div class="form-group">
            <label for="title">Détails</label>
            <label for="details">Details</label>
            <textarea name="details" class="form-control" id="" cols="30" rows="10" required>{{idea.details}}</textarea>
        </div>
        <button class="btn btn-primary">Valider</button>
    </form>
</div>